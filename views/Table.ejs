<%- include("_header"); -%>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Temperature Table</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <style>
        .table {
            width: 100%;
            border-collapse: collapse;
        }
        
        .table th,
        .table td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }
        
        .table th {
            background-color: #f2f2f2;
        }
        
        .table td {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
    <div>
        <table id="temperatureTable" class="table">
            <thead>
                <tr>
                    <th>Date & Time</th>
                    <th>Name</th>
                    <th>Temperature</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < data.length; i++) { %>
                    <tr>
                        <td><%= data[i].time %></td> <!-- แสดงวันที่และเวลา -->
                        <td>Temp<%= data[i]._field.replace('Temp', '') %></td>
                        <td><%= data[i]._value %></td>
                    </tr>
                <% } %>
            </tbody>             
        </table>
    </div>
    
    <%- include("_footer"); -%>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#temperatureTable').DataTable({
                order: [[1, 'asc']] // เรียงลำดับข้อมูลของคอลัมน์ที่ 1 (Field) เป็น ascending order
            });
        });
    </script>    

    <%- include("_footer"); -%>

